// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique
  name     String
  email    String    @unique
  bookings Booking[]

  @@map("users")
}

model Barbershop {
  id       String    @id @unique
  name     String
  address  String
  phone    String
  imageUrl String
  services Service[]
  bookings Booking[]

  @@map("barbershops")
}

model Service {
  id           String     @id @unique
  name         String
  description  String
  price        Decimal    @db.Decimal(10, 2)
  imageUrl     String
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  bookings     Booking[]

  @@map("services")
}

model Booking {
  id           String     @id @unique
  date         DateTime
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  serviceId    String
  service      Service    @relation(fields: [serviceId], references: [id])
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])

  @@map("bookings")
}
